<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70">

    <ImageView
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:id="@+id/item_msg_image"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@drawable/ic_launcher"
        android:layout_marginBottom="@dimen/dp_10"/>

    <TextView
        android:id="@+id/item_msg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="xiaoxiao"
        android:layout_toRightOf="@id/item_msg_image"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="#03A9F4"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/item_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="phone"
        android:layout_toRightOf="@id/item_msg_name"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="#03A9F4"/>

    <TextView
        android:id="@+id/item_msg_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="xiaoxiaao"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#03A9F4"/>

    <TextView
        android:id="@+id/item_msg_desc"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="xiaoxiaao"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/item_msg_image"
        android:layout_below="@id/item_msg_name"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#03A9F4"/>

    <ImageView
        android:id="@+id/item_msg_sex"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_below="@id/item_msg_age"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_toRightOf="@id/item_msg_desc"/>

    <ImageView
        android:id="@+id/item_msg_right"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/img_right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>